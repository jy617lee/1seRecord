<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/start_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="20sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/start_date_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="21 Aug 2017"
            android:textSize="20sp"
            android:layout_weight="3" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/end_date_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/start_date_view">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="END"
            android:textSize="20sp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/end_date_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="29 Aug 2017"
            android:textSize="20sp"
            android:layout_weight="3" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_make_movie"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="MAKE MOVIE"
        android:textColor="@android:color/black"
        android:background="@color/color_primary"/>
</RelativeLayout>